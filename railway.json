{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf node_modules/.cache && npm ci --include=dev && npm run prisma:generate"
  },
  "deploy": {
    "startCommand": "npx tsx src/scripts/ai-analysis-worker.ts",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NODE_ENV": "production",
    "NIXPACKS_NODE_VERSION": "20"
  }
}